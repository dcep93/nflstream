{
  "name": "NFL Stream",
  "description": "On click, runs a background script to scrape a URL and update firebase with the response.",
  "version": "0.0.1",
  "permissions": ["<all_urls>"],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "background": {
    "scripts": [ "typescriptServices.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://nflstream.web.app"],
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": ["scripts/*"],
  "browser_action": {
    "default_icon": "favicon.png"
  },
  "manifest_version": 2
}
