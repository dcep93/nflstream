{
  "name": "NFL Stream",
  "description": "On click or page load, runs a background script to scrape a URL and update firebase with the response.",
  "version": "0.0.5",
  "permissions": ["tabs"],
  "host_permissions": ["http://weakstreams.com/**"],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "background": {"service_worker": "background.js"},
  "content_scripts": [
    {
      "matches": ["https://nflstream.web.app/", "http://weakstreams.com/streams/**"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": "favicon.png"
  },
  "manifest_version": 3
}
