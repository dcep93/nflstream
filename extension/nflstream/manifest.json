{
  "name": "NFL Stream",
  "description": "Assistant for nflstream.web.app: mutes non-active screens and opens streaming page on click.",
  "version": "2.0.0",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://weakstreams.com/streams/**"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "incognito": "split",
  "externally_connectable": {
    "matches": ["http://localhost/*"],
    "accept_tls_channel_id": true
  },
  "manifest_version": 3
}
