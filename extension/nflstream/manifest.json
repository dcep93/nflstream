{
  "name": "NFL Stream",
  "description": "On click, runs a background script to scrape a URL and update firebase with the response.",
  "version": "0.0.1",
  "permissions": [],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "background": {
    "scripts": [ 
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://nflstream.web.app/"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "favicon.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://nflstream.web.app 'sha256-skX/FxAyX0MI4ingUnDPWrV8G/oyjVw4uvp/nNX41gY=' 'sha256-ghkQ8Kn9VK3ptGztIFvMbAZnOrMthUs6lV3Ndu54B0A='; object-src 'self'"
}
