{
  "name": "NFL Stream",
  "description": "Assistant for nflstream.web.app: mutes non-active screens and opens streaming page on click.",
  "version": "2.0.0",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://weakstreams.com/streams/**"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["https://weakstreams.com/streams/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "weakstreams_ruleset_1.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["weakstreams_scripts/*"],
      "matches": ["https://weakstreams.com/*"]
    }
  ],
  "manifest_version": 3
}
