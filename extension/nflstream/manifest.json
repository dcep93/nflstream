{
  "name": "NFL Stream",
  "description": "Assistant for nflstream.web.app: allows fetching of logs.",
  "version": "6.2.1",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://localhost/*", "https://nflstream.web.app/"],
    "accept_tls_channel_id": true
  },
  "host_permissions": ["https://www.espn.com/", "<all_urls>"],
  "manifest_version": 3,
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": ["tabs", "declarativeNetRequest"],
  "content_scripts": [
    {
      "matches": ["https://fantasy.espn.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ]
}
