{
  "name": "NFL Stream",
  "description": "Assistant for nflstream.web.app: mutes non-active screens and allows fetching of logs.",
  "version": "3.0.2",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://weakstreams.com/streams/**"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "permissions": ["declarativeNetRequest"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "weakstreams_ruleset_1.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.espn.com/*",
    "*://weakstreams.com/streams/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost/*", "https://nflstream.web.app/"],
    "accept_tls_channel_id": true
  },
  "manifest_version": 3
}
