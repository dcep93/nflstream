{
  "name": "NFL Stream",
  "description": "Assistant for nflstream.web.app: mutes non-active screens and allows fetching of logs.",
  "version": "3.0.0",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://weakstreams.com/streams/**"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://www.espn.com/*"],
  "externally_connectable": {
    "matches": ["http://localhost/*", "https://nflstream.web.app/"],
    "accept_tls_channel_id": true
  },
  "manifest_version": 3
}
